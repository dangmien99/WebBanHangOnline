@using WebBanHangOnline.Models.ViewModel
@model GioHangViewModel

<section id="cart_items">
    <div class="container">
        <div class="breadcrumbs">
            <ol class="breadcrumb">
                <li><a href="#">Home</a></li>
                <li class="active">Shopping Cart</li>
            </ol>
        </div>
        <div class="table-responsive cart_info">
            <table class="table table-condensed">
                <thead>
                    <tr class="cart_menu">
                        <td class="image">Anh</td>
                        <td class="ten">Tên sản phẩm </td>
                        <td class="price">Giá sản phẩm </td>
                        <td class="quantity">Số lượng</td>
                        <td class="total">Tổng tiền </td>
                        <td></td>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.GioHangs.Count > 0)
                    {
                        @foreach (var item in Model.GioHangs)
                        {
                       <tr>
                          <td class="cart_image">
                         <a href=""><img src="~images/images/@item.Anh" alt=""></a>
                       </td>
                   <td class="cart_ten">
                  <h4><a href="">@item.Ten</a></h4>
                                </td>
                                <td class="cart_price">
                                    <p>@item.GiaThanh</p>
                                </td>
                                <td>
                                    <a class="btn btn-default btn-sm" asp-controller="GioHang" asp-action="Increase" asp-route-id="@item.MaSp"> + </a>
                                    <input class="cart_quantity_input" type="text" name="quantity" value="@item.Sl" autocomplete="off" size="2">
                                    <a class="btn btn-success btn-sm" asp-controller="GioHang" asp-action="Decrease" asp-route-id="@item.MaSp"> - </a>
                                    <a class="btn btn-danger btn-sm" asp-controller="GioHang" asp-action="Remove" asp-route-id="@item.MaSp"> Xóa </a>
                                </td>
                                <td class="cart_total">
                                    <p class="cart_total_price">@Model.GioHangs.Where(x => x.MaSp == @item.MaSp).Sum(x => x.Sl * x.GiaThanh).ToString()</p>
                                </td>
                                <td class="cart_delete">
                                    <a class="cart_quantity_delete" href=""><i class="fa fa-times"></i></a>
                                </td>
                            </tr>
                        }
                        <tr>
                            <td colspan="6">Tổng:@Model.GrandTotal.ToString()  </td>
                        </tr>

                    }
                    else
                    {
                        <a> Giỏ hàng của bạn trống.</a>
                    }
                </tbody>
            </table>
        </div>
    </div>
</section> <!--/#cart_items-->